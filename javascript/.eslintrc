{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "plugins": [
      "react",
      "jsx-a11y",
      "import",
      "jest"
  ],
  "rules": {
      "no-console": ["error", { "allow": ["info", "warn", "error"] }],
      "no-underscore-dangle": "off",
      "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
      "react/forbid-prop-types": [1, { "forbid": ["any"] }],
      "class-methods-use-this": 0
  },
  "globals": {
      "document": true,
      "window": true,
      "fetch": true,
      "$": true
  },
  "env": {
    "jest": true
  }
}
